
{% block title %}Edit Category{% endblock %}

{% block body %}
    <h1>Edit Category</h1>

    {{ form_start(form, {'attr': {'class': 'custom-form-class'}}) }}

    <div class="form-group">
        {{ form_label(form.name, 'Category Name', {'label_attr': {'class': 'custom-label-class'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control custom-input-class'}}) }}
        {{ form_errors(form.name) }}
    </div>

    {% for questionForm in form.questions %}
        <div class="p-4 flex items-center">
            <br>
            {{ form_label(questionForm.question, 'Question', {'label_attr': {'class': 'custom-label-class'}}) }}
            {{ form_widget(questionForm.question, {'attr': {'class': 'form-control custom-input-class'}}) }}
            {{ form_errors(questionForm.question) }}

            {% for responseForm in questionForm.responses %}

                <div class="response form-group">
                    {{ form_label(responseForm.reponse, 'Response', {'label_attr': {'class': 'custom-label-class'}}) }}
                    {{ form_widget(responseForm.reponse, {'attr': {'class': 'form-control custom-input-class'}}) }}
                    {{ form_errors(responseForm.reponse) }}
                    
                    {{ form_label(responseForm.reponse_expected, 'Expected Response', {'label_attr': {'class': 'custom-label-class'}}) }}
                    {{ form_widget(responseForm.reponse_expected, {'attr': {'class': 'form-check-input custom-input-class'}}) }}
                    {{ form_errors(responseForm.reponse_expected) }}
                </div>
            {% endfor %}
        </div>
    {% endfor %}
    
    <button class="btn btn-primary">Save changes</button>
    {{ form_end(form) }}

    <a href="{{ path('app_user') }}" class="btn btn-secondary mt-3">Back to list</a>
{% endblock %}
